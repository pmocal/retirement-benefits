<form action="" method="POST">
	<div class="col23 row3">
		<p class="form">
			<label for="ssn">SSN:</label>
			<input name="ssn" value="{{applicant.ssn_formatted}}" type="text" />
		</p>
		<p class="form">
			<label for="first_name">First name:</label>
			<input name="first_name" value="{{applicant.first_name}}" type="text" />
		</p>
		<p class="form">
			<label for="last_name">Last name:</label>
			<input name="last_name" value="{{applicant.last_name}}" type="text" />
		</p>
		<p class="form">
			<label for="middle_initial">Middle Initial:</label>
			<input name="middle_initial" type="text" value="{{applicant.middle_initial}}"/>
		</p>
		<p class="form">
			<label for="dob">Date of Birth:</label>
			<input name="dob" value="{{applicant.dob_form}}" type="date" />
		</p>
		<p class="form">
			<label for="sex">Sex:</label>
			<input name="sex" value="{{applicant.sex}}" type="text" />
		</p>
		<p class="form">
			<label for="installation">Base:</label>
			<input name="installation" type="text" value="{{applicant.installation}}"/>
		</p>
		<p class="form">
			<label for="termindate">Termination Date:</label>
			<input name="termindate" type="date" />
		</p>
		<p class="form">
			<label for="address">Address:</label>
			<input name="address" value="{{applicant.address}}" type="text" />
		</p>
		<p class="form">
			<label for="city">City:</label>
			<input name="city" value="{{applicant.city}}" type="text" />
		</p>
		<p class="form">
			<label for="state">State:</label>
			<input name="state" value="{{applicant.state}}" type="text" />
		</p>
		<p class="form">
			<label for="zip">Zip:</label>
			<input name="zip" type="text" value="{{applicant.zip}}"/>
		</p>
		<p class="form">
			<label for="retdate">Retirement Date:</label>
			<input name="retdate" type="date" value="{{applicant.retdate_form}}"/>
		</p>
		<p class="form">
			<label for="contrib">Contributions: $</label>
			<input name="contrib" type="number" value="{{applicant.contrib}}"/>
		</p>
		<p class="form">
			<label for="interest">Interest: $</label>
			<input name="interest" type="number" value="{{applicant.interest}}"/>
		</p>
		<p class="form">
			<label for="salary">Salary: $</label>
			<input name="salary" type="number" value="{{applicant.salary}}"/>
		</p>
		<p class="form">
			<label for="rcs">Retirement Credited Service:</label>
			<input name="rcs" type="number" step="0.01" value="{{applicant.rcs}}"/>
		</p>
		<p class="form">
			<label for="sick">Sick leave in hours:</label>
			<input name="sick" type="number" value="{{applicant.sick}}"/>
		</p>
	</div>
	<div class="col23 row4 form">
		<button>Calculate</button>
	</div>
</form>