<body>
	{{#if user}}
		<div class="col1 row1">
			<a href="/">Home</a>
		</div>
		<div class="col23 row1">
			<h1>AFS Retirement Benefits</h1>
		</div>
		<div class="col4 row1">
			<a href="/user/{{user.id}}">My Profile</a>
		</div>

		<div class="col1 row2">
			<p>Welcome <span>{{user.username}}</span></p>
			<a href="/log-out">Log Out</a>
		</div>
	{{else}}
		<div class="col1 row1">
			<a href="/">Home</a>
		</div>
		<div class="col23 row1">
			<h1>AFS Retirement Benefits</h1>
		</div>
		<div class="col23 row2345">
			<form action="/log-in" method="POST">
				<div class="col23 row234">
					<h2>Log In</h2>
					<p>
						<label for="username">Username</label>
						<input name="username" placeholder="username" type="text" />
					</p>
					<p>
						<label for="password">Password</label>
						<input name="password" placeholder="password" type="password" />
					</p>
				</div>
				<div class="col23 row5 form">
					<button>Log In</button>
				</div>
			</form>
		</div>
		<div class="col4 row1">
			<a href="/sign-up">Sign up</a>
		</div>
	{{/if}}
</body>