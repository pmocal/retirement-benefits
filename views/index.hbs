<body>
	{{> home_link}}
	{{> header}}
	{{#if user}}
		{{> myprofile_menu}}
		<div class="col23 row2">
			<h2>Retirement Election Form</h2>
		</div>
		<div class="col23 row34">
			{{#ifEquals user.submission_status "not submitted"}}
				{{> form1}}
			{{/ifEquals}}
			{{#ifNotEquals user.submission_status "not submitted"}}
				<p>Your form status is <span>{{user.submission_status}}</span></p>
			{{/ifNotEquals}}
		</div>
		{{> error_display}}
	{{else}}
		<div class="col23 row2">
			<h2>Log In</h2>
		</div>
		<div class="col23 row34">
			<form action="/log-in" method="POST">
				<div class="col23 row3">
					<p class="form">
						<label for="username">Username</label>
						<input name="username" placeholder="username" type="text" />
					</p>
					<p class="form">
						<label for="password">Password</label>
						<input name="password" placeholder="password" type="password" />
					</p>
				</div>
				<div class="col23 row4 form">
					<button>Log In</button>
				</div>
			</form>
		</div>
		<div class="col23 row5">
			<p>Don't have an account? <a href="/sign-up">Click here to register/signup</a></p>
		</div>
	{{/if}}
</body>